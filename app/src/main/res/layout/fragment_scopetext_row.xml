<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="scopeText" type="org.scopetext.model.javabean.ScopeText"/>
    </data>
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/scopetext_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/form_height"
            android:layout_weight=".5"
            android:text="@{scopeText.name}"
            />
        <TextView
            android:id="@+id/scopetext_contact"
            android:layout_width="0dp"
            android:layout_height="@dimen/form_height"
            android:layout_weight=".5"
            android:text="@{scopeText.contacts.get(0)}"/>

        <CheckBox
            android:id="@+id/checkbox_enabled"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/form_height"
            android:checked="@{scopeText.inUse}"/>
    </LinearLayout>
</layout>