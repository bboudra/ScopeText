<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            style="@style/AppTheme.TitleText"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/AppTheme.ScopeTextHeader"
                android:text="@string/scope_text_header"/>

            <TextView
                style="@style/AppTheme.ScopeTextHeader"
                android:text="@string/contact_header"/>
            <TextView
                style="@style/AppTheme.TitleText"
                android:text="@string/use_header"
                android:layout_weight=".20"/>
        </LinearLayout>
        <data>
            <variable name="presenter" type="org.scopetext.presenter.ScopeTextPresenter"/>
        </data>
        <ListView
            android:id="@+id/scopetext_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:items="@{presenter.scopeTexts}">
        </ListView>
    </LinearLayout>
</layout>
